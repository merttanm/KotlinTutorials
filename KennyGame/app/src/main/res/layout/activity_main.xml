<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="163dp"
        android:layout_height="0dp"
        android:layout_marginTop="48dp"
        android:gravity="center"
        android:text="Time: 0"
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="163dp"
        android:layout_height="0dp"
        android:layout_marginTop="104dp"
        android:gravity="center"
        android:text="Score: 0"
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="140dp"
        android:onClick="skoruarttir"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2">

        <ImageView
            android:id="@+id/Kenny1"
            android:layout_width="110dp"
            android:layout_height="86dp"
            android:layout_row="0"
            android:layout_column="0"
            android:onClick="skoruarttir"
            android:src="@drawable/kenny"
            tools:ignore="MissingConstraints" />

        <ImageView
            android:id="@+id/Kenny2"
            android:layout_width="110dp"
            android:layout_height="86dp"
            android:layout_row="0"
            android:layout_column="1"
            android:onClick="skoruarttir"
            android:src="@drawable/kenny"
            tools:ignore="MissingConstraints" />

        <ImageView
            android:id="@+id/Kenny3"
            android:layout_width="110dp"
            android:layout_height="86dp"
            android:layout_row="0"
            android:layout_column="2"
            android:onClick="skoruarttir"
            android:src="@drawable/kenny"
            tools:ignore="MissingConstraints" />

        <ImageView
            android:id="@+id/Kenny4"
            android:layout_width="110dp"
            android:layout_height="86dp"
            android:layout_row="1"
            android:layout_column="0"
            android:src="@drawable/kenny"
            android:onClick="skoruarttir"
            tools:ignore="MissingConstraints" />

        <ImageView
            android:id="@+id/Kenny5"
            android:layout_width="110dp"
            android:layout_height="86dp"
            android:layout_row="1"
            android:layout_column="1"
            android:src="@drawable/kenny"
            tools:ignore="MissingConstraints" />

        <ImageView
            android:id="@+id/Kenny6"
            android:layout_width="110dp"
            android:layout_height="86dp"
            android:layout_row="1"
            android:layout_column="2"
            android:src="@drawable/kenny"
            android:onClick="skoruarttir"
            tools:ignore="MissingConstraints" />

        <ImageView
            android:id="@+id/Kenny7"
            android:layout_width="104dp"
            android:layout_height="86dp"
            android:layout_row="2"
            android:layout_column="0"
            android:src="@drawable/kenny"
            android:onClick="skoruarttir"
            tools:ignore="MissingConstraints" />

        <ImageView
            android:id="@+id/Kenny8"
            android:layout_width="110dp"
            android:layout_height="86dp"
            android:layout_row="2"
            android:layout_column="1"
            android:src="@drawable/kenny"
            android:onClick="skoruarttir"
            tools:ignore="MissingConstraints" />

        <ImageView
            android:id="@+id/Kenny9"
            android:layout_width="113dp"
            android:layout_height="84dp"
            android:layout_row="2"
            android:layout_column="2"
            android:src="@drawable/kenny"
            android:onClick="skoruarttir"
            tools:ignore="MissingConstraints" />


    </GridLayout>


</androidx.constraintlayout.widget.ConstraintLayout>